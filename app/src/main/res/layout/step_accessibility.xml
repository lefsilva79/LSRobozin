<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Step 2: Enable Accessibility Service"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="1. Click 'Open Accessibility Settings' below\n2. Find and click on LRobozin\n3. Enable the service\n4. Return to the app using the back arrow"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/lrobozin_service"
            android:contentDescription="Accessibility service screen"
            android:background="@android:color/darker_gray"
            android:padding="1dp"/>

        <Button
            android:id="@+id/btnOpenAccessibilitySettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Accessibility Settings"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>